{
  "name": "autoreadme",
  "displayName": "AutoReadME",
  "description": "AI-powered README generator with guided input for VSCode",
  "version": "0.0.1",
  "publisher": "dhtapp",
  "author": {
    "name": "dhtapp",
    "url": "https://github.com/dhtapp"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dhtapp/autoreadme-vscode-extension.git"
  },
  "bugs": {
    "url": "https://github.com/dhtapp/autoreadme-vscode-extension/issues"
  },
  "homepage": "https://github.com/dhtapp/autoreadme-vscode-extension#readme",
  "keywords": [
    "readme",
    "generator",
    "documentation",
    "markdown",
    "ai",
    "productivity",
    "developer-tools"
  ],
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Formatters"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "icon": "icon.png",
  "galleryBanner": {
    "color": "#1e1e1e",
    "theme": "dark"
  },
  "contributes": {
    "commands": [
      {
        "command": "autoreadme.generateReadme",
        "title": "Generate README",
        "category": "AutoReadME"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "autoreadme.generateReadme",
          "when": "explorerResourceIsFolder"
        }
      ],
      "commandPalette": [
        {
          "command": "autoreadme.generateReadme"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.103.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.34.0",
    "typescript": "^5.9.2",
    "ts-loader": "^9.5.4",
    "webpack": "^5.101.3",
    "webpack-cli": "^6.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2"
  }
}